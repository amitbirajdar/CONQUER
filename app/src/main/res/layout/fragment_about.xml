<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amitb.sportsapp.AboutFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="420dp"
                android:layout_height="400dp"
                android:clickable="false"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/conquerlogophoto"
                android:transformPivotX="@android:dimen/thumbnail_height" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Conquer was initially an Intra-College Sports Day. This idea evolved into an Inter-College Fest. Conquer'16 despite being the first year of this fest recieved great participation
and appreciation from students of over 40 colleges across Maharashtra. Conquer'16 included Inter-College T-20 Cricket Tournament, 7-a-side Football Tournament, Basketball Tournament
 and Inter-College Table Tennis where we witnessed various seeded players from Maharashtra and Gujarat. This time we aim to make Conquer'19 bigger and even more wide spread by involving more events as well as encouraging participation of girls."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />


        </LinearLayout>

    </ScrollView>
</FrameLayout>
