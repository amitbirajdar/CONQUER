<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.amitb.sportsapp.MainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cr"
            android:layout_width="200dp"
            android:layout_height="500px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/cricket" />

        <ImageView
            android:id="@+id/fb"
            android:layout_width="200dp"
            android:layout_height="500px"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cr"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/football" />

        <ImageView
            android:id="@+id/bb"
            android:layout_width="200dp"
            android:layout_height="500px"
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cr"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/basketball" />

        <ImageView
            android:id="@+id/bad"
            android:layout_width="203dp"
            android:layout_height="500px"
            android:layout_marginBottom="500dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bb"
            app:layout_constraintTop_toBottomOf="@+id/fb"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/badminton" />

        <ImageView
            android:id="@+id/lt"
            android:layout_width="200dp"
            android:layout_height="500px"
            android:layout_marginBottom="484dp"
            android:layout_marginEnd="119dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bb"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/tennis" />

        <ImageView
            android:id="@+id/tt"
            android:layout_width="200dp"
            android:layout_height="500px"
            android:layout_marginBottom="803dp"
            android:layout_marginStart="269dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bad"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/tt" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>
